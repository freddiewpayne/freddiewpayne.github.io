{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "compiled-js",
      "rootDir": "js",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false
    },
    "exclude": [
      "node_modules",
      ".npm"
    ]
}